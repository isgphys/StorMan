<VirtualHost *:80>
    ServerName storman.phys.ethz.ch
    ServerAlias storagemanager.phys.ethz.ch
    DocumentRoot /opt/StorMan

    RedirectMatch (.*) https://storman.phys.ethz.ch:443$1

    ErrorLog  /var/log/apache2/storman_error_log
    CustomLog /var/log/apache2/storman_access_log common
</VirtualHost>
<VirtualHost *:443>
    ServerName storman.phys.ethz.ch
    ServerAlias storagemanager.phys.ethz.ch
    DocumentRoot /opt/StorMan

    HostnameLookups On
    ProxyPass / http://localhost:8033/ retry=0
    ProxyPassReverse / http://localhost:8033/

    SSLEngine on
    SSLCertificateFile /etc/apache2/cert/phd-bkp-gw.crt
    SSLCertificateKeyFile /etc/apache2/cert/phd-bkp-gw.key

    logLevel  warn
    ErrorLog  /var/log/apache2/storman_ssl_error_log
    CustomLog /var/log/apache2/storman_ssl_access_log common
</VirtualHost>
