#!/usr/bin/env perl
use Data::Dumper;
use JSON;

my $mount_arg = $ARGV[0];

my @mounts = split('#', $mount_arg);

my %balance_status;
foreach my $mount ( @mounts ) {
    my $output    = `/sbin/btrfs balance status $mount`;
    my $status    = "unknown";
    my $css_class = "";

    if ( $output =~ m/No balance found/) {
        $status = "-";
    } else {
        ( $status ) = $output =~ m/is running(.*)$/s;
        chomp $status;
        $css_class = "running";
    }

    $balance_status{$mount} = {
        'output' => $status,
        'css_class' => $css_class,
    };
}

my $json = JSON->new->allow_nonref;
my $json_text = $json->encode(\%balance_status);
print "$json_text";
